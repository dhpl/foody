<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_red_dark"
    >
    <ImageView
        android:id="@+id/_splash_screen_logo_text"
        android:layout_height="100dp"
        android:layout_width="150dp"
        android:src="@drawable/foodytext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        />
    <TextView
        android:id="@+id/splash_screen_version_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Version"
        android:textColor="@android:color/white"
        android:layout_below="@id/_splash_screen_logo_text"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/splash_screen_version_text"
        android:layout_marginTop="50dp"
        android:indeterminateTint="@android:color/white"
        />
    <TextView
        android:id="@+id/splash_screen_email_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        tools:text="dieuhoangphilong@gmail.com"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>