<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray">
    <RadioGroup
        android:id="@+id/main_radio_group_seconds"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:gravity="center"
        >
        <RadioButton
            android:id="@+id/o_dau_moi_nhat_radio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@android:color/transparent"
            android:text="Mới nhất"
            android:textAlignment="center"
            android:textSize="15sp"
            android:drawableBottom="@drawable/ic_keyboard_arrow_down"
            android:textColor="@drawable/change_text_text_view"
            android:background="@drawable/change_background"
            />
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            />
        <RadioButton
            android:id="@+id/o_dau_danh_muc_radio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@android:color/transparent"
            android:text="Danh mục"
            android:textAlignment="center"
            android:textSize="15sp"
            android:drawableBottom="@drawable/ic_keyboard_arrow_down"
            android:textColor="@drawable/change_text_text_view"
            android:background="@drawable/change_background"
            />
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            />
        <RadioButton
            android:id="@+id/o_dau_khu_vuc_radio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@android:color/transparent"
            android:text="Khu vực"
            android:textAlignment="center"
            android:textSize="15sp"
            android:drawableBottom="@drawable/ic_keyboard_arrow_down"
            android:textColor="@drawable/change_text_text_view"
            android:background="@drawable/change_background"
            />
    </RadioGroup>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        />
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Gần tôi"
                    android:textAllCaps="false"
                    android:drawableLeft="@drawable/nearby"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Giao hàng"
                    android:textAllCaps="false"
                    android:drawableLeft="@drawable/order"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Đánh giá"
                    android:textAllCaps="false"
                    android:drawableLeft="@drawable/review"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Blog"
                    android:textAllCaps="false"
                    android:drawableLeft="@drawable/blog"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Top members"
                    android:textAllCaps="false"
                    android:drawableLeft="@drawable/user"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Game And Fun"
                    android:textAllCaps="false"
                    android:drawableLeft="@drawable/gameandfun"
                    />
            </LinearLayout>
            <ProgressBar
                android:id="@+id/o_dau_progrss_bar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:visibility="visible"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/o_dau_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>